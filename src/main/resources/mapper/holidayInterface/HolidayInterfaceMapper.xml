<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="pms.api.holidayInterface.service.HolidayInterfaceMapper">
    <!-- 공휴일 데이터 insert -->
    <insert id="insertHolidayData" parameterType="HolidayInterface">
        INSERT INTO tb_holiday_api(holiday_dt, day_name, is_holiday)
        VALUES
            <foreach collection="list" index="index" item="item" separator=",">
                (#{item.locdate},#{item.dateName},'Y')
            </foreach>
    </insert>
    <!-- 공휴일 데이터 삭제 -->
    <delete id="deleteCurrentMonthHolidayData" parameterType="HolidayInterface">
        DELETE
        FROM tb_holiday_api
        WHERE holiday_dt <![CDATA[ >= ]]> #{searchStart}
        AND holiday_dt <![CDATA[<]]> #{searchEnd}
    </delete>
</mapper>